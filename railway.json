{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "buildCommand": "yarn run build",
    "builder": "NIXPACKS"
  },
  "deploy": {
    "healthcheckPath": "/",
    "healthcheckTimeout": 300,
    "restartPolicyMaxRetries": 4,
    "restartPolicyType": "ALWAYS",
    "startCommand": "yarn run start"
  }
}
